---
import ClockIcon from "astro-heroicons/solid/Clock.astro";

interface Props {
  title: string;
  createdAt: Date;
  slug: string;
  description: string;
  tags?: string[];
  readingTime: number;
}
const { title, description, slug, createdAt, tags, readingTime } = Astro.props;

console.log(slug);
---

<div class="p-4 transition-colors bg-slate-50 hover:bg-slate-200 rounded-md">
  <span class="text-xs font-semibold text-gray-600 inline-block mb-1">
    {new Date(createdAt).toDateString()}{" "}
  </span>
  <h3 class="text-xl font-bold mb-2">
    <a href={`/blog/${slug}`}>{title}</a>
  </h3>
  <p class="text-sm mb-4">{description}</p>

  <div class="flex justify-between">
    <div class="flex gap-1">
      <!-- {
        tags?.map((tag) => (
          <span class="inline-block bg-white border border-gray-400 rounded-full px-3 py-1 text-xs font-semibold text-gray-700 mr-2">
            {tag}
          </span>
        ))
      } -->
    </div>
    <span
      class="text-xs inline-flex items-center gap-1 font-medium text-gray-600"
    >
      <ClockIcon width={14} />
      {readingTime} min read{" "}
    </span>
  </div>
</div>
